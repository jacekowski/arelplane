<div class='container-fluid'>
  <div class='row'>
    <div class='col-4'></div>
    <div class='col-4'>
      <p class='light-header'>Forgot your password?</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form">
          <%= f.label :email, class: 'light-sub-text' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mt-2' %>
        </div>
      <% end %>
    </div>
    <div class='col-4'></div>
  </div>
</div>
