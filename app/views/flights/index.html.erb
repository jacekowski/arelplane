<%= title "Arelplane | flights" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-12">
          <h1 class='light-header text-center'>Manage Flights</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= link_to 'New Flight', new_flight_path %>
        </div>
      </div>
      <div class="row mt-2 mb-2">
        <div class="col-12 col-md-6">
          <%= paginate @flights, theme: 'bootstrap4' %>
        </div>
        <div class="col-12 col-md-6">
          <div class="float-right">
            <%= form_with url: flight_search_path, method: :post, local: true do |f| %>
              <div class="form-inline">
                <% if params[:query].present? %>
                  <%= link_to 'Reset Search', flights_path, class: 'mr-2' %>
                <% end %>
                <div class="input-group">
                  <%= f.text_field :query, id: :query, placeholder: 'Search by identifier', value: params[:query], class: 'form-control' %>
                  <span class="input-group-btn">
                    <%= f.submit "Search", class: 'btn btn-secondary' %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <table class='table table-striped table-inverse table-bordered'>
        <thead>
          <tr>
            <th>Flight date</th>
            <th>Aircraft</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Time out</th>
            <th>Time in</th>
            <th>Total time</th>
            <th>Pic</th>
            <th>Distance</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @flights.each do |flight| %>
            <tr>
              <td><%= flight.flight_date.to_date.to_formatted_s(:long)  %>
                <% if flight.waypoints.present? %>
                  <br><br>
                  Waypoints:
                  <br>
                  <% flight.waypoints.each do |waypoint| %>
                      <p class="ml-4">
                        <%= Location.find(waypoint.location_id).identifier %>
                        <%= link_to 'Delete', waypoint_path(waypoint), method: :delete, data: { confirm: 'Are you sure?' } , class: "ml-2" %>
                      </p>
                  <% end %>
                <% end %>
              </td>
              <td><%= flight.aircraft_id %></td>
              <td><%= Location.find(flight.from_id).identifier %></td>
              <td><%= Location.find(flight.to_id).identifier %></td>
              <td><%= flight.time_out %></td>
              <td><%= flight.time_in %></td>
              <td><%= flight.total_time %></td>
              <td><%= flight.pic %></td>
              <td><%= flight.distance %></td>
              <td><%= link_to 'Delete', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="ml-5">
  <%= paginate @flights, theme: 'bootstrap4' %>
</div>

<br>
