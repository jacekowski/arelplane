<p id="notice"><%= notice %></p>

<%= form_with(url: :locations, local: true) do |form| %>
  <%= form.file_field :location_db %>
  <%= form.submit %>
<% end %>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Type</th>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Elevation</th>
      <th>Continent</th>
      <th>Iso country</th>
      <th>Iso region</th>
      <th>Municipality</th>
      <th>Scheduled service</th>
      <th>Gps code</th>
      <th>Iata code</th>
      <th>Local code</th>
      <th>Home link</th>
      <th>Wikipedia link</th>
      <th>Keywords</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.identifier %></td>
        <td><%= location.location_type %></td>
        <td><%= location.name %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.elevation %></td>
        <td><%= location.continent %></td>
        <td><%= location.iso_country %></td>
        <td><%= location.iso_region %></td>
        <td><%= location.municipality %></td>
        <td><%= location.scheduled_service %></td>
        <td><%= location.gps_code %></td>
        <td><%= location.iata_code %></td>
        <td><%= location.local_code %></td>
        <td><%= location.home_link %></td>
        <td><%= location.wikipedia_link %></td>
        <td><%= location.keywords %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
