<%= form_with model: @story, local: true, class: 'new_story' do |form| %>
  <% if alert %>
    <% alert.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <%= form.text_area :description, class: 'form-control', placeholder: 'Say something about your flight' %>
  <%= render 'stories/select_attachment' %>
  <%= render 'stories/forms/add_flight', form: form  %>
  <%= render 'stories/forms/add_ratings', form: form %>
  <div class="row">
    <div class="col-12 col-lg-3">
      <div class="actions">
        <%= form.submit class: 'btn btn-primary mt-2' %>
      </div>
    </div>
  </div>
<% end %>
