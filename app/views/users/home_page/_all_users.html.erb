<% @feed.each do |post| %>
  <div class="card mb-4 feed_card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-8 col-12">
          <h4 class="card-title name"><%= link_to post.user.name, username_path(post.user.username) %> <span class="flight-count">added <%= pluralize(number_with_delimiter(post.flights.count), "new flight") %> to their Map.</span></h4>
        </div>
        <div class="col-lg-4 col-12">
          <div class="float-lg-right">
            <%= render 'users/profile/follow_form', user: post.user %>
          </div>
        </div>
      </div>
      <span class="date"><%= time_ago_in_words(post.created_at) %> ago</span>
      <div class="row mt-3">
        <div class="col-12">
          <div class="description"><%= post.description %></div>
        </div>
      </div>
      <hr>
      <div class="row airports">
        <div class="col-12">
          <% post.flights.each do |flight| %>
            <%= flight.identifier %>
          <% end %>
        </div>
      </div>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item link_section">
        <span>
          Like
        </span>
        <span class="float-right">
          Comment
        </span>
      </li>
    </ul>
  </div>
<% end %>

<%= paginate @feed, theme: 'bootstrap4' %>
