<div class="follow_button">
  <% if current_user %>
    <% if current_user.following_user?(@user) %>
      <%= render 'users/profile/unfollow_button' %>
    <% else %>
      <%= render 'users/profile/follow_button' %>
    <% end %>
  <% else %>
    <%= render 'users/profile/follow_button' %>
  <% end %>
</div>
